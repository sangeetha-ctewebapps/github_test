<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validation_On_Start_Date_Background_Chec</fullName>
    <active>true</active>
    <errorConditionFormula>AND( 
 ISPICKVAL(Document_Type__c, &apos;Background Check&apos;), ISBLANK( Start_Date__c ) )</errorConditionFormula>
    <errorDisplayField>Start_Date__c</errorDisplayField>
    <errorMessage>Start Date is mandatory for the Document Type Background Check.</errorMessage>
</ValidationRule>
